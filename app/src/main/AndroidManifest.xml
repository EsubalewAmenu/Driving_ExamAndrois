<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.gms.permission.AD_ID"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/ad_app_id"/>

        <activity
            android:name=".questions.fragments.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".questions.fragments.ExamListActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:hardwareAccelerated="true">
        </activity>
        <activity
            android:name="com.herma.apps.drivertraining.SplashActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".questions.QuestionActivity"
            android:hardwareAccelerated="true"/>
        <activity
            android:name=".questions.AnswersActivity"/>
        <activity
            android:name=".about.About_us"/>
        <activity
            android:name=".others.Sign_Home" />
        <activity
            android:name=".about.Describe"/>
        <activity
            android:name=".others.Sign_Display" />
    </application>

</manifest>